{% extends 'base.html.twig' %}

{% block title %}Le bon coin du pauvre | Créer une annonce
{% endblock %}

{% block body %}
	<h1 class="text-center mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl">Créez votre propre annonces</h1>

	<div class="">
		<div class="content-center">
			{{ form_start(creationAnnonce, {'enctype': 'multipart/form-data'}) }}
			<div class="mb-4">
				<label class="text-gray-700 text-sm font-bold">Titre
					{{ form_widget(creationAnnonce.titre) }}
				</label>
			</div>
			<div class="mb-4">
				<label class="text-gray-700 text-sm font-bold">Description
					{{ form_widget(creationAnnonce.description) }}
				</label>
			</div>
			<div class="mb-4">
				<label class="text-gray-700 text-sm font-bold">Prix
					{{ form_widget(creationAnnonce.prix) }}
				</label>
			</div>
			<div class="mb-4">
				<label class="text-gray-700 text-sm font-bold">Image
					{{ form_widget(creationAnnonce.images) }}
				</label>
			</div>

			<div class="mb-4">
				<label class="text-gray-700 text-sm font-bold">Tags
					{{ form_widget(creationAnnonce.tags) }}
				</label>
			</div>

			<button type="submit" class="mt-8 bg-indigo-600 text-white text-sm leading-6 font-medium py-2 px-3 rounded-lg">Valider</button>
			{{ form_end(creationAnnonce) }}


		</div>
	</div>
{% endblock %}
